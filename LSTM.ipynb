import numpy as np
import pandas as pd
from sklearn.preprocessing import MinMaxScaler

# 读取数据
stock_data = pd.read_csv('all_a_stock_data.csv', date_format=['trade_date'])
index_data = pd.read_csv('index_data.csv', date_format=['trade_date'])

# 选择要预测的特征'close'
stock_prices = stock_data['close'].values.reshape(-1, 1)
index_prices = index_data['close'].values.reshape(-1, 1)

# 归一化数据
scaler_stock = MinMaxScaler(feature_range=(0, 1))
scaled_stock_prices = scaler_stock.fit_transform(stock_prices)

scaler_index = MinMaxScaler(feature_range=(0, 1))
scaled_index_prices = scaler_index.fit_transform(index_prices)

# 创建数据集
def create_dataset(dataset, time_step=1):
    X, Y = [], []
    for i in range(len(dataset) - time_step - 1):
        a = dataset[i:(i + time_step), 0]
        X.append(a)
        Y.append(dataset[i + time_step, 0])
    return np.array(X), np.array(Y)

time_step = 100
X_stock, y_stock = create_dataset(scaled_stock_prices, time_step)
X_index, y_index = create_dataset(scaled_index_prices, time_step)

# 重塑X为[LSTM要求的格式](samples, time steps, features)
X_stock = X_stock.reshape(X_stock.shape[0], X_stock.shape[1], 1)
X_index = X_index.reshape(X_index.shape[0], X_index.shape[1], 1)
from keras.models import Sequential
from keras.layers import Dense, LSTM

# LSTM模型构建函数
def build_lstm_model(input_shape):
    model = Sequential()
    
    model.add(LSTM(50, input_shape=(60,1), return_sequences=True,))
    model.add(LSTM(50, return_sequences=False))
    model.add(Dense(25))
    model.add(Dense(1))
    model.compile(loss='mean_squared_error', optimizer='adam')
    return model
    
time_step = 60

# 分别为股票和指数构建模型
model_stock = build_lstm_model((time_step, 1))
model_index = build_lstm_model((time_step, 1))
# 训练股票模型
model_stock.fit(X_stock, y_stock, batch_size=64, epochs=5)

# 训练指数模型
model_index.fit(X_index, y_index, batch_size=64, epochs=5)
# 预测
stock_predictions = model_stock.predict(X_stock)
index_predictions = model_index.predict(X_index)

# 反归一化预测结果
stock_predictions = scaler_stock.inverse_transform(stock_predictions)
index_predictions = scaler_index.inverse_transform(index_predictions)
from itertools import accumulate

# 定义一个生成器函数，用于逐个产生预测值和实际值之间的差异的平方
def mse_generator(predictions, actuals):
    for pred, actual in zip(predictions, actuals):
        yield (pred - actual) ** 2

# 使用生成器函数和accumulate来计算MSE
mse_gen = mse_generator(stock_predictions, y_stock)
mse_sum = accumulate(mse_gen)
stock_mse = next(mse_sum) / len(stock_predictions)
print(f'Stock Model MSE: {stock_mse}')

# 对于指数数据集重复相同的过程
mse_gen_index = mse_generator(index_predictions, y_index)
mse_sum_index = accumulate(mse_gen_index)
index_mse = next(mse_sum_index) / len(index_predictions)
print(f'Index Model MSE: {index_mse}')
import matplotlib.pyplot as plt

# 绘制股票价格预测结果
plt.figure(figsize=(14, 7))
plt.plot(scaler_stock.inverse_transform(y_stock.reshape(-1, 1)), label='Actual Stock Price')
plt.plot(scaler_stock.inverse_transform(stock_predictions), label='Predicted Stock Price')
plt.title('Stock Price Prediction')
plt.xlabel('Time')
plt.ylabel('Stock Price')
plt.legend()
plt.show()

# 绘制指数价格预测结果
plt.figure(figsize=(14, 7))
plt.plot(scaler_index.inverse_transform(y_index.reshape(-1, 1)), label='Actual Index Price')
plt.plot(scaler_index.inverse_transform(index_predictions), label='Predicted Index Price')
plt.title('Index Price Prediction')
plt.xlabel('Time')
plt.ylabel('Index Price')
plt.legend()
plt.show()
