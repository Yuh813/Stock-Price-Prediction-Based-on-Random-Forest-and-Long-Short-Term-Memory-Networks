import tushare as ts
import pandas as pd

# 初始化pro接口
token = '39a4af13b90db3f9194ff688b8ee606411eb0085ad8f6406eb42dceb'
ts.set_token(token)
pro = ts.pro_api()

# 获取所有上市股票的代码列表
stock_basic = pro.stock_basic(exchange='', list_status='L', fields='ts_code')
stock_list = stock_basic['ts_code'].values.tolist()

# 设置要下载的股票数据的起始和结束日期
start_date = '20240601'
end_date = '20241115'

# 创建一个空的DataFrame用于存储所有股票数据
all_stock_data = pd.DataFrame()

# 逐个下载股票数据
for stock_code in stock_list:
    try:
        # 获取单只股票的历史行情数据
        df = pro.daily(ts_code=stock_code, start_date=start_date, end_date=end_date)
        # 将股票代码作为新列添加到DataFrame中
        df['ts_code'] = stock_code
        # 将单只股票数据追加到总DataFrame中
        all_stock_data = pd.concat([all_stock_data, df], ignore_index=True)
        print(f"已下载{stock_code}的数据。")
    except Exception as e:
        print(f"下载{stock_code}时发生错误：{e}")

# 保存所有股票数据到CSV文件
all_stock_data.to_csv('all_a_stock_data.csv', index=False)
